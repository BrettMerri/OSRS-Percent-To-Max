      "outDir": "lib",
      "removeComments": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "lib": [
        "esnext"
      ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "typeings"
  ]
}
